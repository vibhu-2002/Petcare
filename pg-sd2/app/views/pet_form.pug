extends layout

block content
  h1= title
  form(method="POST")
    .form-group
      label(for="name") Pet Name:
      input(type="text" id="name" name="name" value=pet.Pet_Name required)
    .form-group
      label(for="type") Pet Type:
      input(type="text" id="type" name="type" value=pet.Pet_Type required)
    .form-group
      label(for="breed") Breed:
      input(type="text" id="breed" name="breed" value=pet.Pet_Breed)
    button(type="submit") Save
    a.button(href="/pets") Cancel